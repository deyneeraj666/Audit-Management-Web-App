@model AuditManagementPortal.Models.InternalQuestions

@{
    ViewData["Title"] = "Internal";
}

<h1>Internal Audit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InternalAuditResponse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Question1" /> @Html.DisplayNameFor(model => model.Question1)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Question2" /> @Html.DisplayNameFor(model => model.Question2)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Question3" /> @Html.DisplayNameFor(model => model.Question3)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Question4" /> @Html.DisplayNameFor(model => model.Question4)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Question5" /> @Html.DisplayNameFor(model => model.Question5)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Home">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
