@model AuditManagementPortal.Models.AuditDetails

@{
    ViewData["Title"] = "Home";
}

<h3>View Questions by Type:</h3> <hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5><label asp-for="Type" class="control-label"></label></h5>
                @Html.RadioButtonFor(model => model.Type, "Internal", new { onchange = "this.form.submit();"})
                Internal
                <br>
                @Html.RadioButtonFor(model => model.Type, "SOX", new { onchange = "this.form.submit();" })
                SOX<br>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <input type="submit" value="Select" class="btn btn-primary" />
            </div>*@
        </form>
    </div>
</div>

<h4>Audit Your Project:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AuditForm">
            <div class="form-group">
                <input type="submit" value="Continue to Audit Project" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
